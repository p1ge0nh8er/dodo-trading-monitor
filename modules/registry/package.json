{
  "name": "@dodo/trading-monitor-registry",
  "version": "1.0.0",
  "description": "Registry for the Trading Monitor",
  "main": "app.ts",
  "scripts": {
    "test": "yarn build:ts && tsc -p test/tsconfig.test.json && cross-env TS_NODE_FILES=true tap --ts test/**/*.test.ts",
    "start": "yarn build:ts && yarn start:prod",
    "start:prod": "fastify start -l info dist/app.js",
    "build:ts": "tsc",
    "dev": "tsc && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"tsc -w\" \"fastify start --ignore-watch=.ts$ -w -l info -P dist/app.js\""
  },
  "author": "rymnc <aaryamannchallani7@gmail.com> (https://aaryamann.codes/)",
  "license": "MIT",
  "directories": {
    "test": "test"
  },
  "keywords": [],
  "dependencies": {
    "fastify": "^3.0.0",
    "fastify-plugin": "^3.0.0",
    "fastify-autoload": "^3.3.1",
    "fastify-sensible": "^3.1.0",
    "fastify-cli": "^2.13.0"
  },
  "devDependencies": {
    "@types/node": "^15.0.0",
    "@types/tap": "^15.0.0",
    "ts-node": "^10.0.0",
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.3",
    "fastify-tsconfig": "^1.0.1",
    "tap": "^15.0.9",
    "typescript": "^4.2.4"
  }
}